{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Format on save (require recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File nesting patterns (enable as you wish).
  "explorer.fileNesting.patterns": {
    "*.js": "",
    "package.json": "pnpm-lock.yaml",
    "readme.md": "license",
    "readme.zh.md": "license-mulan"
  },

  // Special files display.
  "editor.wordWrapColumn": 80,
  "[javascript]": { "editor.wordWrap": "wordWrapColumn" },
  "files.associations": {
    "license": "plaintext",
    "license-*": "plaintext"
  },

  // Code spell checker (require recommended extensions).
  "cSpell.ignorePaths": ["node_modules", "out", "LICENSE"],
  "cSpell.words": [
    "aprosail",
    "esbenp",
    "mulan",
    "nodenext",
    "oxlint",
    "oxlintrc",
    "releaselog",
    "rolldown",
    "rspack",
    "unplugin"
  ]
}
