{
  "name": "unplugin-package",
  "description": "Bundler plugins for copying manifest files into output.",
  "version": "1.3.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aprosail/unplugin-package.git"
  },
  "license": "MIT",
  "keywords": [
    "unplugin",
    "bundler",
    "build-script",
    "publish",
    "pack"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs",
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "review": "prettier --check . && oxlint",
    "build": "rolldown --config rolldown.config.ts",
    "prepublish": "npm run build",
    "publish": "cd out && npm publish && cd .."
  },
  "dependencies": {
    "unplugin": "^2"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.11",
    "@types/node": "^24",
    "oxlint": "^1",
    "prettier": "^3",
    "prettier-plugin-sh": "^0.18.0",
    "rolldown": "^1.0.0-beta.33",
    "unplugin-dts": "^1.0.0-beta.6"
  }
}
