{
  "name": "unplugin-package",
  "description": "Bundler plugins for copying manifest files into output.",
  "version": "1.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aprosail/unplugin-package.git"
  },
  "license": "MIT",
  "keywords": [
    "unplugin",
    "bundler",
    "build-script",
    "publish",
    "pack"
  ],
  "exports": {
    ".": {
      "import": "./out/index.js",
      "types": "./out/index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "review": "prettier --check . && oxlint",
    "build": "tsc --project tsconfig.json",
    "build:example": "cd example && pnpm build && cd .."
  },
  "dependencies": {
    "unplugin": "^2"
  },
  "devDependencies": {
    "@types/node": "^24",
    "oxlint": "^1",
    "prettier": "^3",
    "prettier-plugin-sh": "^0.18.0",
    "typescript": "^5"
  }
}
